[Unit]
Description=MLflow Tracking Server
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
User=aclarke
WorkingDirectory=/home/aclarke/echoes
ExecStart=/home/aclarke/miniconda/envs/echoes/bin/mlflow ui --host 0.0.0.0 --port 5000 --backend-store-uri /mnt/echoes_data/mlruns
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
