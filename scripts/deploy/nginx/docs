server {
    server_name docs.lonel.ai;
    root /var/www/docs/current;
    location / {
        index index.html;
        try_files $uri $uri/ =404;
    }
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    ssl_certificate /etc/letsencrypt/live/docs.lonel.ai/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/docs.lonel.ai/privkey.pem;
}
server {
    listen 80;
    listen [::]:80;
    server_name docs.lonel.ai;
    return 301 https://$server_name$request_uri;
}
